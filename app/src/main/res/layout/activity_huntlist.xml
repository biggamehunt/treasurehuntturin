<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFF"
    >
    <include
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/toolbar"/>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                    android:textSize="20dp"
                    android:textColor="@color/title"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What you are reading the most"
                    android:layout_gravity="center"
                    android:textColor="@color/metatile"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF"
                android:layout_marginTop="40dp">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="FASHION"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/concept"
                    android:layout_marginLeft="30dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textColor="@color/number"
                    android:textStyle="bold"
                    android:layout_marginRight="50dp"
                    />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/firstBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:progress="40"
                android:progressTint="@color/progressbar"
                android:secondaryProgress="250"
                android:secondaryProgressTint="@color/secondprogressbar"
                />







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF"
                android:layout_marginTop="40dp">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ENVIRONMENT"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/concept"
                    android:layout_marginLeft="30dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45%"
                    android:textColor="@color/number"
                    android:textStyle="bold"
                    android:layout_marginRight="50dp"
                    />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/secondBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:progress="50"
                android:progressTint="@color/progressbar"
                android:secondaryProgress="250"
                android:secondaryProgressTint="@color/secondprogressbar"

                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF"
                android:layout_marginTop="40dp">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TECHNOLOGY"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/concept"
                    android:layout_marginLeft="30dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30%"
                    android:textColor="@color/number"
                    android:textStyle="bold"
                    android:layout_marginRight="50dp"
                    />

            </LinearLayout>


            <ProgressBar
                android:id="@+id/thirdbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:progress="40"
                android:progressTint="@color/progressbar"
                android:secondaryProgress="250"
                android:secondaryProgressTint="@color/secondprogressbar"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF"
                android:layout_marginTop="40dp">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="AUTO"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/concept"
                    android:layout_marginLeft="30dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15%"
                    android:textColor="@color/number"
                    android:textStyle="bold"
                    android:layout_marginRight="50dp"
                    />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/fourthbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:progress="20"
                android:progressTint="@color/progressbar"
                android:secondaryProgress="250"
                android:secondaryProgressTint="@color/secondprogressbar"
                />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF"
                android:layout_marginTop="40dp">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="FINANCE"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/concept"
                    android:layout_marginLeft="30dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textColor="@color/number"
                    android:textStyle="bold"
                    android:layout_marginRight="50dp"
                    />

            </LinearLayout>


            <ProgressBar
                android:id="@+id/fifthbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:progress="35"
                android:progressTint="@color/progressbar"
                android:secondaryProgress="250"
                android:secondaryProgressTint="@color/secondprogressbar"
                />






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF"
                android:layout_marginTop="40dp">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="SPORTS"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/concept"
                    android:layout_marginLeft="30dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55%"
                    android:textColor="@color/number"
                    android:textStyle="bold"
                    android:layout_marginRight="50dp"
                    />

            </LinearLayout>


            <ProgressBar
                android:id="@+id/sixthbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:progress="55"
                android:progressTint="@color/progressbar"
                android:secondaryProgress="250"
                android:secondaryProgressTint="@color/secondprogressbar"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF"
                android:layout_marginTop="40dp"
                >


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="SCIENCE"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/concept"
                    android:layout_marginLeft="30dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85%"
                    android:textColor="@color/number"
                    android:textStyle="bold"
                    android:layout_marginRight="50dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:layout_marginBottom="30dp"
                >
                <ProgressBar
                    android:id="@+id/sevenbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:progress="80"
                    android:progressTint="@color/progressbar"
                    android:secondaryProgress="250"
                    android:secondaryProgressTint="@color/secondprogressbar"
                    />


            </LinearLayout>








        </LinearLayout>

    </ScrollView>

</LinearLayout>