<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="none"
        android:background="@drawable/backimage">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_list"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEWS"
                    android:textSize="14dp"
                    android:textColor="@color/listname"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="30dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_menu"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHANNELS"
                    android:textSize="14dp"
                    android:textColor="@color/listname"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_bookmark_outline"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOKMARKS"
                    android:textSize="14dp"
                    android:textColor="@color/listname"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_three_pieces_pie_chart"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OVERVIEW"
                    android:textSize="14dp"
                    android:textColor="@color/listname"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_small_calendar"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CALENDAR"
                    android:textSize="14dp"
                    android:textColor="@color/listname"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_clock"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIMELINE"
                    android:textSize="14dp"
                    android:textColor="@color/listname"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_avatar_inside_a_circle"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFILE"
                    android:textSize="14dp"
                    android:textColor="@color/listname"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_circle_5"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WIDGETS"
                    android:textSize="14dp"
                    android:textColor="@color/listname"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_cogwheel"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SETTINGS"
                    android:textSize="14dp"
                    android:textColor="@color/listname"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    />

            </LinearLayout>


            <View
                android:layout_width="210dp"
                android:layout_height="1dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="bottom"

                android:background="#ACACAC" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOG OUT"
                        android:textColor="@color/listname"
                        android:textSize="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="40dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark Henry"
                        android:textSize="14dp"
                        android:textColor="@color/listname"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        />
                </LinearLayout>





                <com.example.andrea22.gamehunt.utility.CircleImageView
                    android:id="@+id/banar1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/she"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"


                    />





            </LinearLayout>






        </LinearLayout>



    </ScrollView>



</android.support.design.widget.NavigationView>
