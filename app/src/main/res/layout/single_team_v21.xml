<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="145dp"
    android:padding="32dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/cvteam"
    android:layout_gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/she"
                android:adjustViewBounds="true"/>


        </RelativeLayout>

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I Giovani dotati"
                android:maxLines="2"
                android:lines="2"
                android:textColor="@android:color/black"
                android:textSize="22dp"/>

            <TextView
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Se la vita ti da limoni, mangiali che son buoni"
                android:textSize="10dp"/>

            <LinearLayout
                android:id="@+id/team_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:alpha="0.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_group_black_24dp"/>

                        <TextView
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/"/>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"/>


                    </LinearLayout>

                    <Button
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="35dp"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:text="go to team"
                        android:background="@drawable/button_style"
                        android:textColor="#ffffff"
                        android:onClick="goToSingleTeam"/>



                </LinearLayout>


            </LinearLayout>



        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>

