
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="layout.newstage">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollViewNewStage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/white"
        >
        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/map_layout"
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:id="@+id/map"
                    tools:context="com.example.andrea22.gamehunt.MapsActivity"
                    android:name="com.google.android.gms.maps.SupportMapFragment"/>
                <ImageView
                    android:id="@+id/transparent_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:color/transparent" />
            </RelativeLayout>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ray"
                android:layout_gravity="right"
                android:max="950"

                android:progress="450"
            />
        <EditText
            android:textColor="#544f4f"
            android:id="@+id/clueHunt"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:hint="@string/clueHunt"
            android:textColorHint="#bfb4b4"
            android:paddingLeft="20dp"
            android:drawablePadding="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:maxLength="300"
            />


            <EditText
                android:textColor="#544f4f"
                android:id="@+id/numberComplete"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:hint="Numero di giocatori che devono completare lo stage"
                android:text="1"
                android:numeric="integer"
                android:textColorHint="#bfb4b4"
                android:paddingLeft="20dp"
                android:drawablePadding="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:maxLength="300"
                />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="is location required?"
            android:id="@+id/islocreq"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="is photo required?"
            android:id="@+id/isphotoreq"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="is photo checked?"
            android:id="@+id/ischeckreq"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFERMA"
            android:id="@+id/donestage"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:onClick="TurnToHunt"
            />
        </LinearLayout>

    </ScrollView>

</LinearLayout>

